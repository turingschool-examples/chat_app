<li class="media">
  <div class="media-body">
    <div class="media">
      <% if message.username == session[:username] %>
        <a class="pull-left" href="#">
          <%= image_tag( "potter.png", class:"media-object img-circle") %>
        </a>
      <% else %>
        <a class="pull-left" href="#">
          <%= image_tag( "github.png", class:"media-object img-circle") %>
        </a>
      <% end %>
      <div class="media-body" >
        <%= message.content %>
        <br />
        <small class="text-muted"><%= message.username %> | <%=
        message.created_at %></small>
        <hr />
      </div>
    </div>
  </div>
</li>

